<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <ImageView
            android:id="@+id/imgPoster"
            android:src="@drawable/ic_movie_black_24dp"
            android:contentDescription="@string/poster_do_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/poster_top_margin"
            android:layout_marginBottom="@dimen/poster_top_margin"/>

    <GridLayout
            android:id="@+id/glDadosFilme"
            android:layout_below="@id/imgPoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <!--
        título, ano, data de lançamento, diretor, atores, idioma, país,
        notas de avaliação (fonte e valor), nota IMDb, tipo, produtora e website.
        -->

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título:"
                android:layout_column="0"
                android:layout_row="0"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano:"
                android:layout_column="0"
                android:layout_row="1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lançamento:"
                android:layout_column="0"
                android:layout_row="2"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diretor:"
                android:layout_column="0"
                android:layout_row="3"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atores:"
                android:layout_column="0"
                android:layout_row="4"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idioma:"
                android:layout_column="0"
                android:layout_row="5"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="País:"
                android:layout_column="0"
                android:layout_row="6"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nota IMDB:"
                android:layout_column="0"
                android:layout_row="7"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:layout_column="0"
                android:layout_row="8"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="8"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produtora:"
                android:layout_column="0"
                android:layout_row="9"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="9"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website:"
                android:layout_column="0"
                android:layout_row="10"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="10"/>

    </GridLayout>

    <TextView android:id="@+id/txvNotasAvaliacao"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/glDadosFilme"
              android:text="Notas de avaliação"
              android:layout_marginStart="@dimen/activity_horizontal_margin"
              android:layout_marginEnd="@dimen/activity_horizontal_margin"
              android:layout_marginTop="30dp"
              android:textStyle="bold"/>

    <ListView android:id="@+id/lstNotasAvaliacao"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/txvNotasAvaliacao"
              android:layout_marginTop="10dp"></ListView>

</RelativeLayout>