<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <ImageView
            android:id="@+id/imgPoster"
            android:src="@drawable/ic_movie_black_24dp"
            android:contentDescription="@string/poster_do_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/poster_top_margin"/>

    <GridLayout
            android:id="@+id/glDadosFilme"
            android:layout_below="@id/imgPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo" />

        <TextView
                android:id="@+id/txvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ano" />

        <TextView
                android:id="@+id/txvAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lancamento"/>

        <TextView
                android:id="@+id/txvLancamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diretor"/>

        <TextView
                android:id="@+id/txvDiretor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/atores"/>

        <TextView
                android:id="@+id/txvAtores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idioma"/>

        <TextView
                android:id="@+id/txvIdioma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pais"/>

        <TextView
                android:id="@+id/txvPais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nota_imdb"/>

        <TextView
                android:id="@+id/txvNotaImdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo"/>

        <TextView
                android:id="@+id/txvTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/produtora"/>

        <TextView
                android:id="@+id/txvProdutora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/website"/>

        <TextView
                android:id="@+id/txvWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </GridLayout>

    <TextView android:id="@+id/txvNotasAvaliacao"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/glDadosFilme"
              android:text="@string/notas_de_avaliacao"
              android:layout_marginStart="@dimen/activity_horizontal_margin"
              android:layout_marginEnd="@dimen/activity_horizontal_margin"
              android:layout_marginTop="20dp"
              android:textStyle="bold"/>

    <ListView android:id="@+id/lstNotasAvaliacao"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/txvNotasAvaliacao"
              android:layout_marginTop="10dp" />

</RelativeLayout>